@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<p>@Html.ActionLink("Create a Role","CreateRole","Admin")</p>
<p>@Html.ActionLink("Assign Roles","ManageRole","Admin")</p>
<table class="table table-striped table-info table-hover">
	<tr>
		<th>@Html.DisplayNameFor(m=>m.Id)</th>
		<th>@Html.DisplayNameFor(m=>m.Name)</th>
		<th>Delete selected</th>
	</tr>
	@foreach(var v in Model)
	{
		<tr>
			<td>@v.Id</td>
			<td>@v.Name</td>
			<td>@Html.ActionLink("Delete?","Delete",new{@roleId=v.Id},new { onclick="return confirm('Delete role with id = " +v.Id+" ?');"})</td>
		</tr>
	}
</table>
